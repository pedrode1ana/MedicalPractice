<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.MedicalPractice.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Maui.MedicalPractice.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Medical Practice">
    <FlyoutItem Title="Patients" Route="Patients">
        <ShellContent Title="Patients"
                      ContentTemplate="{DataTemplate view:PatientsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Physicians" Route="Physicians">
        <ShellContent Title="Physicians"
                      ContentTemplate="{DataTemplate view:PhysiciansPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Appointments" Route="Appointments">
        <ShellContent Title="Appointments"
                      ContentTemplate="{DataTemplate view:AppointmentsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Notes" Route="Notes">
        <ShellContent Title="Notes"
                      ContentTemplate="{DataTemplate view:MedicalNotesPage}" />
    </FlyoutItem>
</Shell>
